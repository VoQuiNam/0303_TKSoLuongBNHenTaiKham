@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ThongKeSoLuongBN</title>

    <!-- Bootstrap 5 CSS -->
    <link rel="stylesheet" href="~/dist/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Site styles -->
    <link rel="stylesheet" href="~/dist/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/dist/Nam_ThongKeSoLuongBNHenTaiKham.styles.css" asp-append-version="true" />


    <!-- Optional: Favicon -->
    @* <link rel="icon" type="image/png" href="~/dist/favicon.ico" />

    <link href="~/dist/lib/icons-1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/dist/lib/bootstrap-5.3.0-dist/css/bootstrap.min.css" rel="stylesheet" /> *@

    <!-- jQuery (nếu cần) -->
    <!-- jQuery (phải load trước Bootstrap Datepicker) -->
    <script src="~/dist/lib/Jquery/jquery.min.js"></script>

    <!-- Bootstrap Datepicker CSS -->
    <link href="~/dist/lib/bootstrap-datepicker-1.10.0/dist/css/bootstrap-datepicker.min.css" rel="stylesheet" />

    <!-- Bootstrap Datepicker JS -->
    <script src="~/dist/lib/bootstrap-datepicker-1.10.0/dist/js/bootstrap-datepicker.min.js"></script>
    <script src="~/dist/lib/bootstrap-datepicker-1.10.0/dist/locales/bootstrap-datepicker.vi.min.js"></script>


    <script src="~/dist/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Bootstrap Bundle (JS + Popper) -->
    @* <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/dist/lib/bootstrap-5.3.0-dist/js/bootstrap.bundle.min.js"></script>


    <link href="~/dist/lib/toastr/toastr.min.css" rel="stylesheet" />

    <script src="~/dist/lib/toastr/toastr.min.js"></script> *@




    <script src="@Url.Content("~/dist/js/BienChung.js")"></script>

</head>





<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Nam_TKSoLuongBNHenTaiKham" asp-action="Nam_TKSoLuongBNHenTaiKhamPage">Thống kê số lượng bệnh nhân tái khám</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "D0303Nam_TKSoLuongBNHenTaiKham" ? "active" : "")"
                               asp-controller="C0303TKSoLuongBNHenTaiKham" asp-action="V0303TKSoLuongBNHenTaiKhamPage">Thống kê số lượng bệnh nhân hẹn tái khám</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Scripts cho Bootstrap 5 -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
